@using AdminApp.Models;

@model List<ItemGioHang>

<li class="hm-minicart">
    <div class="hm-minicart-trigger">
        <span class="item-icon"></span>
        <span class="item-text">
            @string.Format("{0:N0} ₫", @ViewBag.TongTien)
            <span class="cart-item-count">@ViewBag.TongSoLuong</span>
        </span>
    </div>
    <span></span>
    <div class="minicart">
        <ul class="minicart-product-list">
            @if (Model != null)
            {
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <li>
                            <a href="single-product.html" class="minicart-product-image">
                                <img src="@Url.Content(item.HinhAnh)" width="50" height="50" alt="cart products">
                            </a>
                            <div class="minicart-product-details">
                                <h6><a href="single-product.html">@item.TenSP</a></h6>
                                <span>@string.Format("{0:N0} ₫", @item.DonGia) x @item.SoLuong</span>
                            </div>
                            <button class="close" title="Remove">
                                @Html.ActionLink(" ", "XoaGioHang", "Cart", new { @id = item.MaSP }, new { @class = "fa fa-times" })
                               @*<i class="fa fa-close"></i>*@
                            </button>
                        </li>
                    }
                }
            }

